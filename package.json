{
  "name": "catalog-marketplace",
  "version": "1.0.0",
  "description": "Marketplace catalog with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./public/styles.css --minify",
    "dev": "python -m http.server 3000",
    "backend": "python -m uvicorn backend.app:app --host 0.0.0.0 --port 8000 --reload"
  },
  "keywords": ["marketplace", "catalog", "tailwindcss"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  }
}