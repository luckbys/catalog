# Configurações do Banco de Dados
# Para SQLite com volume persistente (recomendado para EasyPanel)
DB_URL=sqlite:////data/backend_data.db
# Para PostgreSQL (opcional)
# DB_URL=postgresql://user:password@localhost:5432/catalog_db

# URL base do frontend (onde o catalogo.html será servido)
CLIENT_BASE_URL=https://seu-dominio.com/catalogo.html

# Domínios permitidos para CORS (separados por vírgula se múltiplos)
ALLOWED_ORIGIN=https://seu-dominio.com

# Validade da sessão em horas
SESSION_VALIDITY_HOURS=4

# Porta da aplicação (definida automaticamente pelo EasyPanel/Heroku)
PORT=8000

# Configurações de segurança (opcional)
# SECRET_KEY=sua-chave-secreta-aqui
# ENVIRONMENT=production